@model ShauliBlog.Models.CommentModel

@{
    ViewBag.Title = "Edit";
}

<div id="mainContent">

    <h2>ערוך תגובה</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>CommentModel</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Subject)
                </div>
                @Html.LabelFor(model => model.PostModelID, "תגובה מפוסט", htmlAttributes: new { @class = "control-label col-md-3" })
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    @Html.EditorFor(model => model.CommentAuthor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CommentAuthor, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.CommentAuthor, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    @Html.EditorFor(model => model.CommentAuthorWebSite, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CommentAuthorWebSite, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.CommentAuthorWebSite, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    @Html.EditorFor(model => model.CommentText, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CommentText, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.CommentText, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
