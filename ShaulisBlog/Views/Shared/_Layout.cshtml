            <li><a href="#">About</a></li>
            <li><a href="#">@Html.ActionLink("Fans Club", "Index", "FansClub")</a></li>
            <li><a href="#">@Html.ActionLink("Post Manage", "Index", "BlogPosts")</a></li>
            <li class="subscribe">
